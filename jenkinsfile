pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/add-calculator-c.git'
            }
        }
        stage('Compile') {
            steps {
                bat 'gcc add.c -o add.exe'
                bat 'gcc test_add.c -o test_add.exe'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'test_add.exe'
            }
        }
        stage('Demo Run') {
            steps {
                bat 'echo 10 20 | add.exe'
            }
        }
    }
}
